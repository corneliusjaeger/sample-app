<h1>Galleries</h1>

<table>
  <tr>
    <th>Parent</th>
    <th>Name</th>
    <th>Content</th>
  </tr>
  <% for gallery in @galleries %>
    <tr>
      <td><%= gallery.parent_id %></td>
      <td><%= gallery.name %></td>
      <td><%= gallery.content %></td>
      <td><%= link_to "Show", gallery %></td>
      <td><%= link_to "Edit", edit_gallery_path(gallery) %></td>
      <td><%= link_to "Destroy", gallery, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Gallery", new_gallery_path %></p>
