<%= form_for @gallery do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :parent_id %><br />
	<%= f.collection_select :parent_id, Gallery.all(:order => "name"), :id, :name, :include_blank => true %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p><%= f.submit %></p>
<% end %>
